{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "types/*": ["src/@types/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "api/*": ["./src/api/*"],
      "constants/*": ["./src/constants/*"],
      "hooks/*": ["./src/hooks/*"],
      "db/*": ["./src/db/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./node_modules/pixi.js/**/*.d.ts",
    "./node_modules/pixi-spine/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
